<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".vistas.AddEvent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvCancelarAddEvents"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:text="Cancelar"
            android:textColor="#3F51B5"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvGuardarAddEvento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:gravity="right"
            android:text="Guardar"
            android:textColor="#3F51B5"
            android:textSize="20dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/tvTituloEvento"
        android:layout_width="389dp"
        android:layout_height="60dp"
        android:layout_marginLeft="24dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:hint="Añade un título"
        android:inputType="text"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/tvCantDineroAddEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:ems="10"
        android:hint="Cantidad"
        android:inputType="numberDecimal" />

    <RadioGroup
        android:id="@+id/rgGastosCobros"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbGastoAddEvento"
            android:layout_width="119dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Gasto" />

        <RadioButton
            android:id="@+id/rbCobroAddEvento"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:text="Cobro" />

        <Switch
            android:id="@+id/repetir"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Repetir" />

    </RadioGroup>

    <Spinner
        android:id="@+id/spCategoriasAddEventos"
        android:layout_width="363dp"
        android:layout_height="41dp"
        android:layout_margin="20dp" />

    <EditText
        android:id="@+id/tvMultilineDescripcionAddEvents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Escribe una descripcion"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/tvFechaAddEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:text="Selecciona una fecha"
        android:textSize="16sp" />

</LinearLayout>