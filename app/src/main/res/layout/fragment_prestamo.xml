<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <!-- NUEVO ENCABEZADO -->
        <LinearLayout
            android:id="@+id/layout_encabezado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/boton_abrir_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Abrir menú"
                android:padding="8dp"
                android:src="@drawable/baseline_menu_24" />

            <TextView
                android:id="@+id/text_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Pago de impuesto por cripto"
                android:textColor="#222222"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/layout_encabezado"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- CAPITAL -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capital inicial (€)"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/seekbar_capital"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="200000"
                        android:progressTint="#2196F3"
                        android:thumbTint="#2196F3" />

                    <TextView
                        android:id="@+id/text_capital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 €"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- PLAZO -->

                <!-- INTERÉS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Plazo (años)"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/seekbar_plazo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:max="40"
                        android:progressTint="#2196F3"
                        android:thumbTint="#2196F3" />/>

                    <TextView
                        android:id="@+id/text_plazo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 años"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:background="#FFFFFF"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de interés (%)"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <SeekBar
                        android:id="@+id/seekbar_interes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:progressTint="#2196F3"
                        android:thumbTint="#2196F3" />/>

                    <TextView
                        android:id="@+id/text_interes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 %"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- CHECKBOX -->

                <!-- INTERÉS POSTERIOR -->

                <!-- AÑO CAMBIO TIPO -->

                <!-- RESULTADOS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="48dp"
                    android:background="#E3F2FD"
                    android:elevation="2dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pagos a realizar:"
                        android:textColor="#333333"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_mensualidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="0,00 €"
                        android:textColor="#004D40"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/Vergrafica"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#2196F3"
                        android:text="Ver Grafica" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/irTabla"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#2196F3"
                        android:text="Ver tabla" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <!-- PANEL LATERAL -->
    <LinearLayout
        android:id="@+id/right_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="8dp">

        <Button
            android:id="@+id/boton1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#3730A3"
            android:text="Hipoteca"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/boton2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#3730A3"
            android:text="Préstamos"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/boton3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#3730A3"
            android:text="Crypto Riesgo"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>
