<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Contenido principal -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Botón de menú -->
        <ImageView
            android:id="@+id/boton_abrir_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:contentDescription="Abrir menú"
            android:padding="8dp"
            android:src="@drawable/baseline_menu_24" />

        <!-- Título a la derecha del botón -->
        <TextView
            android:id="@+id/text_titulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/boton_abrir_menu"
            android:layout_alignTop="@id/boton_abrir_menu"
            android:layout_marginStart="16dp"
            android:text="Calculadora de préstamos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

        <!-- Contenido desplazable -->
        <ScrollView
            android:id="@+id/contenedor_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/boton_abrir_menu"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Capital Inicial -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/botonCapitalRestar"
                        android:layout_width="63dp"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <TextView
                        android:id="@+id/text_capital_inicial"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Capital Inicial"
                        android:gravity="center"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/botonCapitalSumar"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="+" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seek_capital_inicial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="50000"
                    android:progress="1000"
                    android:layout_marginBottom="24dp" />

                <!-- Plazo de Amortización -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/botonPlazoRestar"
                        android:layout_width="63dp"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <TextView
                        android:id="@+id/text_plazo_amortizacion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Plazo de Amortización"
                        android:gravity="center"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/botonPlazoSumar"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="+" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seek_plazo_amortizacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="40"
                    android:progress="1"
                    android:layout_marginBottom="24dp" />

                <!-- Tipo de Interés -->
                <TextView
                    android:id="@+id/text_tipo_interes_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tipo de Interés"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/botonTipoInteresRestar"
                        android:layout_width="63dp"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <TextView
                        android:id="@+id/text_tipo_interes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2.0 %"
                        android:gravity="center"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/botonTipoInteresSumar"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="+" />
                </LinearLayout>

                <!-- CheckBox Interés Posterior -->
                <CheckBox
                    android:id="@+id/checkbox_interes_posterior"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activar Interés Posterior"
                    android:layout_marginBottom="24dp" />

                <!-- Interés Posterior -->
                <TextView
                    android:id="@+id/text_interes_posterior_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interés Posterior"
                    android:textSize="20sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/botonInteresPosteriorRestar"
                        android:layout_width="63dp"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <TextView
                        android:id="@+id/text_interes_posterior"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="3.0 %"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/botonInteresPosteriorSumar"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="+" />
                </LinearLayout>

                <!-- Año Cambio Tipo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">

                    <Button
                        android:id="@+id/botonCambioAnioRestar"
                        android:layout_width="63dp"
                        android:layout_height="wrap_content"
                        android:text="-" />

                    <TextView
                        android:id="@+id/text_anio_cambio_tipo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Año de cambio de tipo"
                        android:gravity="center"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/botonCambioAnioSumar"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:text="+" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seek_anio_cambio_tipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="40"
                    android:progress="1"
                    android:enabled="false"
                    android:layout_marginBottom="48dp" />

                <!-- RESULTADOS -->
                <TableLayout
                    android:id="@+id/tabla_resultados"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:padding="16dp">

                    <TableRow>
                        <TextView
                            android:layout_weight="1"
                            android:text="Mensualidad"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/text_mensualidad"
                            android:gravity="end"
                            android:text="0,00 €"
                            android:textSize="16sp" />
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_weight="1"
                            android:text="Mensualidad posterior"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/text_mensualidad_posterior"
                            android:gravity="end"
                            android:text="0,00 €"
                            android:textSize="16sp" />
                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <!-- Menú lateral -->
    <LinearLayout
        android:id="@+id/right_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@android:color/darker_gray"
        android:padding="16dp">

        <Button
            android:id="@+id/boton1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:text="OPCION 1"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/boton2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:text="OPCION 2"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/boton3"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:text="OPCION 3"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/white" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
