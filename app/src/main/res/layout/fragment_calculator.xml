<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4">

    <!-- Contenido principal con ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="#F4F4F4">

            <!-- Botón de menú -->
            <ImageView
                android:id="@+id/btn_open_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="Abrir menú"
                android:src="@drawable/baseline_menu_24"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Bloques reutilizables -->
            <!-- Precio del inmueble -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio del inmueble"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="4dp" />

                <SeekBar
                    android:id="@+id/seekBarPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="500000"
                    android:progress="200000"
                    android:progressTint="#2196F3"
                    android:thumbTint="#2196F3" />

                <TextView
                    android:id="@+id/textViewPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="200.000 €"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:paddingTop="6dp" />

            </LinearLayout>

            <!-- Ahorro aportado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ahorro aportado"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="4dp" />

                <SeekBar
                    android:id="@+id/seekBarAhorro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="200000"
                    android:progress="20000"
                    android:progressTint="#2196F3"
                    android:thumbTint="#2196F3" />

                <TextView
                    android:id="@+id/textViewAhorro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20.000 €"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:paddingTop="6dp" />
            </LinearLayout>

            <!-- Plazo del préstamo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="8dp"
                android:background="#FFFFFF"
                android:elevation="2dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plazo del préstamo"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:paddingBottom="4dp" />

                <SeekBar
                    android:id="@+id/seekBarPlazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="40"
                    android:progress="10"
                    android:progressTint="#2196F3"
                    android:thumbTint="#2196F3" />

                <TextView
                    android:id="@+id/textViewPlazo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="10 años"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="#666666"
                    android:paddingTop="6dp" />
            </LinearLayout>

            <!-- Elección tipo de impuesto -->
            <LinearLayout
                android:id="@+id/nuevo_apartado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingVertical="16dp"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/text_nuevo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="¿Qué eliges?"
                    android:textSize="18sp"
                    android:textColor="#333333" />

                <CheckBox
                    android:id="@+id/ImpuestoFijo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fijo"
                    android:textColor="#333333" />

                <CheckBox
                    android:id="@+id/ImpuestoVariable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Variable"
                    android:textColor="#333333" />
            </LinearLayout>

            <!-- Ajuste de impuesto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingVertical="8dp">

                <Button
                    android:id="@+id/botonImpuestoRestar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/ImpuestoValor"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Valor"
                    android:textSize="18sp"
                    android:textColor="#333333" />

                <Button
                    android:id="@+id/botonImpuestoSumar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:backgroundTint="#2196F3"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Resultados (azul) -->
            <TableLayout
                android:id="@+id/tabla_azul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="#E3F2FD"
                android:padding="16dp"
                android:elevation="2dp">

                <TableRow>
                    <TextView
                        android:text="Tu cuota mensual"
                        android:layout_weight="1"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/cuotaMnesual"
                        android:gravity="end"
                        android:text="2.681 €"
                        android:textColor="#004D40" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Importe hipoteca"
                        android:layout_weight="1"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/importeHipoteca"
                        android:gravity="end"
                        android:text="203.225 €"
                        android:textColor="#004D40" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Porcentaje de financiación"
                        android:layout_weight="1"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/porcentajeFinanciacion"
                        android:gravity="end"
                        android:text="102 %"
                        android:textColor="#004D40" />
                </TableRow>
            </TableLayout>

            <!-- Resultados (gris) -->
            <TableLayout
                android:id="@+id/tabla_gris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:elevation="2dp">

                <TableRow>
                    <TextView
                        android:text="Precio del inmueble"
                        android:layout_weight="1"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/precioInmuebleResultado"
                        android:gravity="end"
                        android:text="200.000 €"
                        android:textColor="#333333" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Impuestos y gastos de la compra"
                        android:layout_weight="1"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/impuestosGastosCompra"
                        android:gravity="end"
                        android:text="23.225 €"
                        android:textColor="#333333" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Coste total del inmueble"
                        android:layout_weight="1"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/costeTotalInmueble"
                        android:gravity="end"
                        android:text="223.225 €"
                        android:textColor="#333333" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Ahorro aportado"
                        android:layout_weight="1"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/ahorroAportadoResultado"
                        android:gravity="end"
                        android:text="20.000 €"
                        android:textColor="#333333" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Importe hipoteca"
                        android:layout_weight="1"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/importeHipotecaResultado"
                        android:gravity="end"
                        android:text="203.225 €"
                        android:textColor="#333333" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Interés hipoteca"
                        android:layout_weight="1"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/interesHipoteca"
                        android:gravity="end"
                        android:text="118.511 €"
                        android:textColor="#333333" />
                </TableRow>

                <TableRow>
                    <TextView
                        android:text="Coste total con hipoteca"
                        android:layout_weight="1"
                        android:textColor="#333333" />
                    <TextView
                        android:id="@+id/costeTotalConHipoteca"
                        android:gravity="end"
                        android:text="341.736 €"
                        android:textColor="#333333" />
                </TableRow>
            </TableLayout>
            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pcGrafica"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="8dp"
                android:background="#efefef"/>


        </LinearLayout>
    </ScrollView>

    <!-- Menú lateral -->
    <LinearLayout
        android:id="@+id/right_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:elevation="8dp">

        <Button
            android:id="@+id/boton1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="OPCIÓN 1"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/boton2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="OPCIÓN 2"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/boton3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="OPCIÓN 3"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
